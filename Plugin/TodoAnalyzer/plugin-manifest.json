{
  "manifestVersion": "1.0.0",
  "name": "TodoAnalyzer",
  "version": "1.0.0",
  "displayName": "待办趋势分析器",
  "description": "静态插件，为AI提供待办事项的智能趋势分析和数据洞察。自动统计完成率、逾期情况、优先级分布等，帮助AI更好地理解用户的任务管理状态。",
  "author": "VCP Developer",
  "pluginType": "static",
  "entryPoint": {
    "type": "nodejs",
    "command": "node TodoAnalyzer.js"
  },
  "communication": {
    "protocol": "stdio",
    "timeout": 5000
  },
  "configSchema": {},
  "capabilities": {
    "systemPromptPlaceholders": [
      {
        "placeholder": "{{VCPTodoAnalysis}}",
        "description": "提供当前待办事项的趋势分析报告",
        "updateInterval": 300000
      }
    ]
  }
}
